<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.connexe.ui.MainController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
              <MenuBar>
                  <menus>
                      <Menu mnemonicParsing="false" text="Fichier">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#handleNew" text="Nouveau...">
                                  <accelerator>
                                      <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                  </accelerator>
                        </MenuItem>
                              <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Ouvrir...">
                                  <accelerator>
                                      <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                  </accelerator>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Enregistrer">
                                  <accelerator>
                                      <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                  </accelerator>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Enregistrer sous...">
                                  <accelerator>
                                      <KeyCodeCombination alt="DOWN" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                  </accelerator>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Quitter">
                                  <accelerator>
                                      <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                  </accelerator>
                              </MenuItem>
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Actions">
                          <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSolve" text="RÃ©soudre le labyrinthe..." />
                              <MenuItem mnemonicParsing="false" text="Modifier le labyrinthe..." />
                          </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Aide">
                          <items>
                              <MenuItem mnemonicParsing="false" text="Informations">
                                  <accelerator>
                                      <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                  </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleExampleMaze" text="Labyrinthe d'exemple" />
                          </items>
                      </Menu>
                  </menus>
              </MenuBar>
            <ToolBar>
              <items>
                <Button fx:id="genButton" disable="true" mnemonicParsing="false" onAction="#handleGenerationAnimation">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/generateIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="solveButton" disable="true" mnemonicParsing="false" onAction="#handleSolveAnimation">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/solveIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="stopButton" disable="true" mnemonicParsing="false" onAction="#handleStopAnimation">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/stopIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label nodeOrientation="LEFT_TO_RIGHT" text="Vitesse" />
                        <Slider fx:id="speedSlider" blockIncrement="1.0" focusTraversable="false" majorTickUnit="1.0" max="8.0" min="1.0" minorTickCount="0" nodeOrientation="LEFT_TO_RIGHT" snapToTicks="true" value="1.0" />
                        <Label fx:id="speedLabel" nodeOrientation="LEFT_TO_RIGHT" text="x1" />
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#handleArcade" text="Arcade" />
              </items>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="4.0" left="10.0" right="10.0" top="4.0" />
               </padding>
            </ToolBar>
         </children>
      </VBox>
   </top>
</BorderPane>
